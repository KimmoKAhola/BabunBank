@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BabunBank</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="icon" href="~/favicon-16x16.png" type="image/svg+xml" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" 
          crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
<div class="home-bg">
  <div id="navbar-border">
    
  
  <div class="container navbar">
    <div class="navbar-navigation">
      <img src="~/images/Logo.svg" alt="bank logotype"/>
      <nav class="navbar-links">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">User</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Index">Customer</a>
      </nav>
    </div>
    <div class="navbar-site-settings">
      @* <button class="btn-login"><img src="~/images/lock.svg" alt="lock icon"/>Login</button> *@
      @if(SignInManager.IsSignedIn(User)){
        <p>Hello @User.Identity?.Name</p>
          <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn-signup">Log out<img src="~/images/login-arrow.svg" alt="login arrow"/></button>
          </form>
      }
      else
      {
      <a asp-area="Identity" asp-page="/Account/Login" title="Manage">
        <button class="btn-signup">Log in<img src="~/images/login-arrow.svg" alt="login arrow"/></button>
      </a>
      }
    </div>
  </div>
</div>
  @RenderBody()
</div>

<div class="footer-bg">
  <div class="container">
    <div class="footer-links">
      <div class="left-section">
        <img class="footer-logo" src="~/images/Logo.svg" alt="logo"/>
        <p class="footer-text">2190 Urban Terrace, Mirpur, link
          Licensed in 50 states.</p>
        <span class="footer-icons">
          <img src="~/images/instagram.svg" alt="instagram"/>
          <img src="~/images/instagram.svg" alt="instagram"/>
          <img src="~/images/instagram.svg" alt="instagram"/>
        </span>
        <p class="footer-text">Copyright &copy;2023 babun inc.</p>
      </div>
      <div class="right-section">
        <div>
          <h3></h3>
          <ul>
            <li>
              <a class="link" href="#">Home</a>
              <a class="link" href="#">Pricing</a>
              <a class="link" href="#">About Us</a>
              <a class="link" href="#">Careers</a>
              <a class="link" href="#">Contact us</a>
            </li>
          </ul>
          <ul>
            <li>
              <a class="link" href="#">Terms & Policy</a>
              <a class="link" href="#">Generic link name</a>
              <a class="link" href="#">Internal link</a>
              <a class="link" href="#">link to our page</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">

            <div class="navbar-footer">
                <p>Copyright @DateTime.Now.Year babun inc.</p>
                <nav>
                    <a href="#">Privacy & Terms</a>
                    <a href="#">Cookies</a>
                    <a href="#">Contact Us</a>
                </nav>

                <div>
                    <img src="~/images/instagram.svg" alt="logo"/>
                    <img src="~/images/instagram.svg" alt="logo"/>
                    <img src="~/images/instagram.svg" alt="logo"/>
                    <img src="~/images/instagram.svg" alt="logo"/>
                </div>
            </div>

        </div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>