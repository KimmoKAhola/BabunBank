@using System.Globalization
@model IEnumerable<BabunBank.Models.ViewModels.LandingPage.DetailedLandingPageViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="container">
    <h2 style="text-align: center; margin-top: 72px; font-size: 48px">The top 10 customers in @Model.First().Country</h2>
    <table class="data-table" style="margin: 72px 0">
        <tr>
            <th>Customer Id</th>
            <th>Account Id</th>
            <th>Customer Name</th>
            <th>Account Sum</th>
        </tr>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.AccountId</td>
                <td>@customer.Name</td>
                <td>@customer.AccountSum.ToString("C2", new CultureInfo("sv-SE"))</td>
            </tr>
        }
        </tbody>
    </table>
    <div class="button-row" style="margin-bottom: 72px; padding-bottom: 72px; justify-content: end">
        <a style="max-width: 250px" asp-controller="Home" asp-action="Index" class="create-customer-form-btn">Return to home</a>
        <button id="goToTop-button" onclick="goToTop()">
            <i class="material-symbols-outlined">
                arrow_upward
            </i>
        </button>
    </div>
</div>

<script>
    function goToTop(){
        document.body.scrollTop = 0; 
        document.documentElement.scrollTop = 0;
    }
</script>